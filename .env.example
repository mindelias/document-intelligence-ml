# ============================================
# CONFIGURATION TEMPLATE
# ============================================
# Copy this to .env and fill in your values
# Never commit your actual .env file!

# AWS Configuration
AWS_REGION=us-east-1
S3_BUCKET=your-bucket-name-here
USE_S3=true

# SageMaker (optional - only if deploying)
SAGEMAKER_ROLE=arn:aws:iam::YOUR_ACCOUNT_ID:role/SageMakerExecutionRole
SAGEMAKER_INSTANCE_TYPE=ml.m5.xlarge
SAGEMAKER_INSTANCE_COUNT=1
ENDPOINT_NAME=doc-classifier-endpoint

# Model Configuration
MODEL_NAME=microsoft/layoutlmv3-base
USE_PRETRAINED=true
BATCH_SIZE=16
LEARNING_RATE=2e-5
NUM_EPOCHS=5

# Environment (auto-detected, but you can override)
# ENVIRONMENT=sagemaker  # or 'local' or 'cloud'